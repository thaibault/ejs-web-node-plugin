{
  "name": "ejs-web-node-plugin",
  "version": "1.0.250",
  "license": "CC-BY-3.0",
  "description": "A static template processor for web-node.",
  "homepage": "https://torben.website/ejs-web-node-plugin",
  "documentationWebsite": {
    "name": "ejs-web-node-plugin",
    "trackingCode": "UA-40192634-19"
  },
  "keywords": [
    "backend",
    "ejs",
    "static",
    "template"
  ],
  "files": [
    "index.ts",
    "type.ts"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/thaibault/ejs-web-node-plugin.git"
  },
  "scripts": {
    "build": "weboptimizer build",
    "check": "yarn check:types; yarn lint",
    "check:types": "weboptimizer check:types",
    "clear": "weboptimizer clear && rimraf dummyPlugin/dummy.txt",
    "document": "weboptimizer document",
    "lint": "weboptimizer lint",
    "prepare": "yarn build",
    "report:coverage": "nyc report --reporter=text-lcov | coveralls",
    "serve": "yarn build && webNode",
    "start": "yarn serve",
    "test": "weboptimizer test",
    "update": "yarn version --patch && yarn publish",
    "update:documentation": "documentationWebsite --log-level info",
    "watch": "weboptimizer build --watch"
  },
  "dependencies": {
    "ejs": "*"
  },
  "devDependencies": {
    "@types/ejs": "*",
    "@types/jest": "*",
    "@types/loader-utils": "*",
    "@types/node": "*",
    "@types/workbox-webpack-plugin": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "babel-eslint": "*",
    "clientnode": "*",
    "documentation-website": "*",
    "eslint": "*",
    "eslint-config-google": "*",
    "eslint-plugin-jsdoc": "*",
    "jest": "*",
    "jsdoc": "*",
    "rimraf": "*",
    "web-node": "*",
    "weboptimizer": "*"
  },
  "peerDependencies": {
    "@babel/runtime": "*",
    "clientnode": "*",
    "web-node": "*"
  },
  "sideEffects": true,
  "webNode": {
    "ejs": {
      "cache": false,
      "cacheInPlaceReplacements": false,
      "extensions": [
        ".html.js",
        ".ejs"
      ],
      "locations": {
        "exclude": [
          "backup",
          "database",
          "log",
          "mockup",
          "node_modules",
          "src",
          "source"
        ],
        "include": [],
        "inPlaceReplacements": []
      },
      "options": {
        "cache": true,
        "compileDebug": {
          "__evaluate__": "self.debug"
        },
        "debug": {
          "__evaluate__": "self.debug"
        }
      },
      "renderAfterConfigurationUpdates": false,
      "reloadEntryFiles": true,
      "reloadSourceContent": true,
      "scope": {
        "evaluation": {
          "configuration": "configuration",
          "fileSystem": "fileSystem",
          "now": "now",
          "nowUTCTimestamp": "nowUTCTimestamp",
          "parser": "parser",
          "path": "path",
          "PluginAPI": "PluginAPI",
          "plugins": "plugins",
          "synchronousFileSystem": "synchronousFileSystem",
          "Tools": "Tools"
        },
        "execution": {},
        "plain": {}
      }
    }
  },
  "webOptimizer": {
    "module": {
      "optimizer": {
        "babelMinify": {
          "module": {
            "#": "Avoids \"TypeError: ./index.ts: Cannot read property 'length' of undefined\"",
            "numericLiterals": false
          }
        }
      }
    },
    "targetTechnology": {
      "boilerplate": "node",
      "payload": "node"
    }
  }
}
